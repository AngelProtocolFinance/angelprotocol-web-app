{
  "name": "giving",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/giving/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "swc",
        "outputPath": "build/apps/giving",
        "index": "apps/giving/src/index.html",
        "baseHref": "/",
        "main": "apps/giving/src/index.tsx",
        "tsConfig": "apps/giving/tsconfig.app.json",
        "assets": ["apps/giving/src/favicon.png", "apps/giving/src/assets"],
        "styles": ["apps/giving/src/index.css"],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "apps/giving/webpack.config.js",
        "postcssConfig": "apps/giving/postcss.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": false,
          "vendorChunk": true
        },
        "production": {
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "giving:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "giving:build:development"
        },
        "production": {
          "buildTarget": "giving:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/giving/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/giving/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
