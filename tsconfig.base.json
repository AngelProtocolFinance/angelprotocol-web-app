{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "paths": {
      "@giving/assets/*": ["libs/@giving/assets/src/*"],
      "@giving/types/*": ["libs/@giving/types/src/*"],
      "@giving/constants/*": ["libs/@giving/constants/src/*"],
      "@giving/schemas/*": ["libs/@giving/schemas/src/*"],
      "@giving/slices/*": ["libs/@giving/slices/src/*"],
      "@giving/services/*": ["libs/@giving/services/src/*"],
      "@giving/hooks/*": ["libs/@giving/hooks/src/*"],
      "@giving/contracts/*": ["libs/@giving/contracts/src/*"],
      "@giving/store": ["libs/@giving/store/src/index.ts"],
      "@giving/helpers": ["libs/@giving/helpers/src/index.ts"],
      "@giving/errors": ["libs/@giving/errors/src/index.ts"],
      "@giving/contexts/wallet-context": [
        "libs/@giving/contexts/wallet-context/src/index.ts"
      ],
      "@giving/contexts/modal-context": [
        "libs/@giving/contexts/modal-context/src/index.ts"
      ],
      "@giving/helpers/*": ["libs/@giving/helpers/src/*"],
      "@giving/components/*": ["libs/@giving/components/src/*"],
      "@giving/components/prompt": [
        "libs/@giving/components/prompt/src/index.ts"
      ],
      "@giving/components/steps": [
        "libs/@giving/components/steps/src/index.tsx"
      ],
      "@giving/components/kado-modal": [
        "libs/@giving/components/kado-modal/src/index.ts"
      ],
      "@giving/components/bookmark-btn": [
        "libs/@giving/components/bookmark-btn/src/index.ts"
      ],
      "@giving/components/kyc": ["libs/@giving/components/kyc/src/index.ts"],
      "@giving/components/split": [
        "libs/@giving/components/split/src/index.ts"
      ],
      "@giving/components/countries": [
        "libs/@giving/components/countries/src/index.ts"
      ],
      "@giving/components/img-editor": [
        "libs/@giving/components/img-editor/src/index.ts"
      ],
      "@giving/components/wallet-suite": [
        "libs/@giving/components/wallet-suite/src/index.tsx"
      ],
      "@giving/components/header-btn": [
        "libs/@giving/components/header-btn/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
