{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "paths": {
      "@giving/assets/*": ["libs/@giving/assets/src/*"],
      "@giving/types/*": ["libs/@giving/types/src/*"],
      "@giving/constants/*": ["libs/@giving/constants/src/*"],
      "@giving/schemas/*": ["libs/@giving/schemas/src/*"],
      "@giving/helpers": ["libs/@giving/helpers/src/index.ts"],
      "@giving/errors": ["libs/@giving/errors/src/index.ts"],
      "@giving/helpers/*": ["libs/@giving/helpers/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
