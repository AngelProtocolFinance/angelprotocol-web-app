{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "./package.json",
      "./public/scripts/*",
      "./src/scripts/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noPrototypeBuiltins": "off",
        "noImplicitAnyLet": "off",
        "noGlobalIsNan": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noExtraBooleanCast": "off",
        "useOptionalChain": "off",
        "noUselessFragments": "off"
      },
      "style": {
        "useImportType": "warn",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noPrecisionLoss": "off",
        "noChildrenProp": "off",
        "useJsxKeyInIterable": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "useAltText": "off",
        "useKeyWithMouseEvents": "off",
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off",
        "noLabelWithoutControl": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    }
  }
}
